                    x:Name="btnUuTien1"
                    Width="150"
                    Margin="4,0,0,0"
                    Command="{Binding SetUuTienMay1Command}"
                    Content="Ưu tiên máy 1 (F5)"
                    Style="{StaticResource BlueButton}" />

