                    x:Name="btnNapMay1"
                    Width="150"
                    Margin="4,0,0,0"
                    Command="{Binding NapDonMay1Command}"
                    Content="Nạp đơn máy 1 (F7)"
                    Style="{StaticResource BlueButton}" />

