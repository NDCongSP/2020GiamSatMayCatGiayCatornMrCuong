                    x:Name="btnNapMay2"
                    Width="150"
                    Margin="4,0,0,0"
                    Command="{Binding NapDonMay2Command}"
                    Content="Nạp đơn máy 2 (F8)"
                    Style="{StaticResource BlueButton}" />
            </StackPanel>
        </Grid>

