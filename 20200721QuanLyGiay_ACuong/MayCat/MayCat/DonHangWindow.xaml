                    x:Name="btnUuTien2"
                    Width="150"
                    Margin="4,0,0,0"
                    Command="{Binding SetUuTienMay2Command}"
                    Content="Ưu tiên máy 2 (F6)"
                    Style="{StaticResource BlueButton}" />

