            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,4,0,0"
                Content="Nguồn đơn hàng:" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Height="30"
                Margin="0,4,0,0"
                IsEnabled="False"
                IsReadOnly="False"
                Style="{StaticResource BlueTextBox}"
                Text="{Binding NguonDonHang}" />
