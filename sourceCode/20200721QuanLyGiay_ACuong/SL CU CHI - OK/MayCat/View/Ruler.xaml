            <Rectangle Margin="1599,0,0,0" Style="{StaticResource Delimeter}" />
            <Rectangle Margin="1699,0,0,0" Style="{StaticResource Delimeter}" />
            <Rectangle Margin="1799,0,0,0" Style="{StaticResource Delimeter}" />
            <Rectangle Margin="1899,0,0,0" Style="{StaticResource Delimeter}" />
            <Rectangle Margin="1998,0,0,0" Style="{StaticResource Delimeter}" />

            <TextBlock
                Margin="-20,0,0,0"
                Style="{StaticResource Text}"
                Text="1000" />
            <TextBlock
                Margin="84,0,0,0"
                Style="{StaticResource Text}"
                Text="900" />
            <TextBlock
                Margin="184,0,0,0"
                Style="{StaticResource Text}"
                Text="800" />
            <TextBlock
