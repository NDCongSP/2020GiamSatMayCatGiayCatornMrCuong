<UserControl
    x:Class="MayCat.ConLanEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MayCat"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="host"
    d:DesignHeight="150"
    d:DesignWidth="400"
    Foreground="Green"
    mc:Ignorable="d">
    <Viewbox>
        <Grid Width="400" Height="150">
            <Grid Width="60" Height="150">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.3*" />
                </Grid.RowDefinitions>
                <Path
                    HorizontalAlignment="Center"
                    Data="M 10,150 L 70,30 L 130,150 z"
                    Fill="{Binding ElementName=host, Path=Foreground}"
                    Stretch="Uniform" />
                <Border Grid.Row="1" Background="{Binding ElementName=host, Path=Foreground}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="40"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding ElementName=host, Path=Tag}" />
                </Border>
                <Path
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Data="M 10,150 L 70,30 L 130,150 z"
                    Fill="{Binding ElementName=host, Path=Foreground}"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Uniform">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" ScaleY="-1" />
                            <SkewTransform AngleX="0" AngleY="0" />
                            <RotateTransform Angle="0" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
            </Grid>
            <Grid
                Margin="0,0,0,-75"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="50"
                        FontWeight="SemiBold"
                        Foreground="Red"
                        Text="{Binding ElementName=host, Path=ViTriHienTai, StringFormat=f1, FallbackValue=0}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="50"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        Text=" / " />
                    <TextBox
                        MinWidth="100"
                        Padding="2"
                        HorizontalAlignment="Center"
                        local:SelectAllOnFocus.Enabled="True"
                        BorderBrush="Black"
                        BorderThickness="2"
                        FontSize="50"
                        FontWeight="SemiBold"
                        Foreground="Green"
                        KeyDown="TextBox_KeyDown"
                        Text="{Binding ElementName=host, Path=ViTriCaiDat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center" />
                </StackPanel>
            </Grid>
        </Grid>

    </Viewbox>
</UserControl>
